
import modules ;

local dll-suffix = so ;
if [ modules.peek : OS ] in CYGWIN NT
{
   if $toolset = gcc
   {
      dll-suffix = dll ;
   }
   else
   {
      dll-suffix = lib ;
   }
}
if $toolset = darwin
{
   dll-suffix = dylib ;
}

project ext ;

lib a : 
    : <file>bin/$toolset/debug/a.$(dll-suffix) <variant>debug
    :
    : <include>debug
    ;
    
lib a :
    : <file>bin/$toolset/release/a.$(dll-suffix) <variant>release
    :
    : <include>release
    ;
    
